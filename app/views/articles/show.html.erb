<h1 class="d-flex justify-content-between">
  <%= @article.title %>
  <small>
  <%= link_to (edit_article_path(@article)),class: "text-decoration-none"  do %>
    <i class="fa-regular fa-pen-to-square"></i>
  <% end %>
  <%= link_to (article_path(@article)),class: "text-decoration-none text-danger",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash"></i>
  <% end %>
  </small>
</h1>

<p><%= @article.content %></p>
